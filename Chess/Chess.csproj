<Project Sdk="Uno.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net9.0-browserwasm;net9.0-desktop</TargetFrameworks>

    <OutputType>Exe</OutputType>
    <UnoSingleProject>true</UnoSingleProject>

    <!-- Display name -->
    <ApplicationTitle>Chess</ApplicationTitle>
    <!-- App Identifier -->
    <ApplicationId>com.companyname.chess</ApplicationId>
    <!-- Versions -->
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <ApplicationVersion>1</ApplicationVersion>
    <!-- Package Publisher -->
    <ApplicationPublisher>Chess</ApplicationPublisher>
    <!-- Package Description -->
    <Description>Chess powered by Uno Platform.</Description>

    <!--
      UnoFeatures let's you quickly add and manage implicit package references based on the features you want to use.
      https://aka.platform.uno/singleproject-features
    -->
    <UnoFeatures>
      MVUX;
      SkiaRenderer;
    </UnoFeatures>
  </PropertyGroup>
  <ItemGroup />
  <ItemGroup>
    <PackageReference Include="Uno" />
    <PackageReference Include="Uno.Toolkit.WinUI" />
  </ItemGroup>

</Project>
