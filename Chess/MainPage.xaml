<Page x:Class="Chess.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Chess"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <StackPanel IsTabStop="True">
    <Grid Name="BoardGrid" HorizontalAlignment="Center">
    </Grid>
    <Popup Name="GameOver">
      <StackPanel>
        <Border Background="White" Padding="20" BorderThickness="10">
          <StackPanel>
            <TextBlock Foreground="Black">
              <Run Text="{Binding CurrentPlayer}"/>
              <Run Text=" won"/>
            </TextBlock>
            <Button Name="PlayAgain" Content="Play again?" Foreground="Black" Background="Gray"/>
          </StackPanel>
        </Border>
      </StackPanel>
    </Popup>
  </StackPanel>
</Page>
