<Page x:Class="Chess.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Chess"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <Page.Resources>
    <Style TargetType="Button">
      <Setter Property="BorderBrush" Value="Black"/>
      <Setter Property="CornerRadius" Value="0"/>
    </Style>
    <Style x:Key="PopupStyle" TargetType="StackPanel">
      <Setter Property="Background" Value="#5B5B5B"/>
      <Setter Property="BorderBrush" Value="Black"/>
      <Setter Property="CornerRadius" Value="10"/>
    </Style>
  </Page.Resources>
  <StackPanel Name="Root">
    <Grid Name="BoardGrid" HorizontalAlignment="Center">
    </Grid>
    <Popup Name="GameOver" PlacementTarget="{Binding ElementName=BoardGrid}">
      <StackPanel Height="60" Width="120" Style="{StaticResource PopupStyle}">
        <TextBlock Foreground="Black" HorizontalAlignment="Center">
          <Run Text="{Binding CurrentPlayer}"/>
          <Run Text=" won"/>
        </TextBlock>
        <Button Name="PlayAgain" Content="Play again?" Foreground="Black" Background="Gray" HorizontalAlignment="Center"/>
      </StackPanel>
    </Popup>
    <Popup Name="Promote" PlacementTarget="{Binding ElementName=BoardGrid}">
      <StackPanel Height="80" Width="220" Style="{StaticResource PopupStyle}">
        <TextBlock Foreground="Black" HorizontalAlignment="Center" Text="Choose Promotion:"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
      </StackPanel>
    </Popup>
  </StackPanel>
</Page>
